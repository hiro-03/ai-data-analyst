{
  "Comment": "Weather Data Integration Workflow",
  "StartAt": "FetchWeatherData",
  "States": {
    "FetchWeatherData": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:ap-northeast-1:123456789012:function:WeatherFetchFunction",
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "Next": "HandleError"
        }
      ],
      "End": true
    },
    "HandleError": {
      "Type": "Pass",
      "Result": {
        "station": "Unknown",
        "status": "fallback",
        "data": null
      },
      "End": true
    }
  }
}